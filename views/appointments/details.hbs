<h1 class="mb-4">Détails du rendez-vous</h1>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">{{appointment.title}}</h5>
    <div>
      {{#if (eq user.userType "consultant")}}
        <a href="/appointments/{{appointment.id}}/edit" class="btn btn-sm btn-outline-secondary">
          <i class="fas fa-edit"></i> Modifier
        </a>
      {{/if}}
      {{#if (eq appointment.status "scheduled")}}
        <form action="/appointments/{{appointment.id}}/cancel" method="POST" class="d-inline">
          <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir annuler ce rendez-vous ?')">
            <i class="fas fa-times"></i> Annuler
          </button>
        </form>
      {{/if}}
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <p><strong>Date et heure:</strong> {{formatDateTime appointment.date}}</p>
        <p><strong>Durée:</strong> {{appointment.duration}} minutes</p>
        <p>
          <strong>Type:</strong> 
          {{#if appointment.isOnline}}
            <span class="badge bg-info">En ligne</span>
          {{else}}
            <span class="badge bg-secondary">Présentiel</span>
          {{/if}}
        </p>
      </div>
      <div class="col-md-6">
        <p>
          <strong>Statut:</strong>
          {{#if (eq appointment.status "scheduled")}}
            <span class="badge bg-primary">Planifié</span>
          {{else if (eq appointment.status "completed")}}
            <span class="badge bg-success">Terminé</span>
          {{else if (eq appointment.status "cancelled")}}
            <span class="badge bg-danger">Annulé</span>
          {{/if}}
        </p>
        {{#if (eq user.userType "consultant")}}
          <p><strong>Bénéficiaire:</strong> {{appointment.beneficiary.firstName}} {{appointment.beneficiary.lastName}}</p>
        {{else}}
          <p><strong>Consultant:</strong> {{appointment.consultant.firstName}} {{appointment.consultant.lastName}}</p>
        {{/if}}
        {{#if appointment.isOnline}}
          <p>
            <strong>Lien de visioconférence:</strong> 
            <a href="{{appointment.meetingLink}}" target="_blank">{{appointment.meetingLink}}</a>
          </p>
        {{else}}
          <p><strong>Lieu:</strong> {{appointment.location}}</p>
        {{/if}}
      </div>
    </div>
    
    {{#if appointment.notes}}
      <div class="mt-3">
        <h6>Notes:</h6>
        <p>{{appointment.notes}}</p>
      </div>
    {{/if}}
  </div>
</div>

<div class="d-flex justify-content-between mt-3">
  <a href="/appointments" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Retour à la liste
  </a>
  
  {{#if (eq user.userType "consultant")}}
    <div>
      {{#if (eq appointment.status "scheduled")}}
        <form action="/appointments/{{appointment.id}}/edit" method="POST" class="d-inline">
          <input type="hidden" name="status" value="completed">
          <button type="submit" class="btn btn-success">
            <i class="fas fa-check"></i> Marquer comme terminé
          </button>
        </form>
      {{/if}}
    </div>
  {{/if}}
</div>

<div class="card h-100 shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Rendez-vous RÃ©cents</h5>
    <div>
      <a
        href="/appointments/new?beneficiary={{beneficiary.id}}"
        class="btn btn-sm btn-success me-1"
        title="Planifier RDV"
      >
        <i class="fas fa-plus"></i>
      </a>
      <a
        href="/appointments?beneficiary={{beneficiary.id}}"
        class="btn btn-sm btn-outline-primary"
        title="Voir tout"
      >
        <i class="fas fa-list"></i>
      </a>
    </div>
  </div>
  <div class="card-body">
    {{#if beneficiary.beneficiaryAppointments.length}}
      <ul class="list-group list-group-flush">
        {{#each (limit beneficiary.beneficiaryAppointments 5)}}
          <li class="list-group-item px-0">
            <div class="d-flex justify-content-between">
              <span>{{type}}</span>
              <small>{{formatDateTime date}}</small>
            </div>
            <p class="mb-0"><small>{{#if
                  description
                }}{{description}}{{else}}<span class="text-muted">Pas de
                    description</span>{{/if}}</small></p>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="text-muted text-center my-4">Aucun rendez-vous</p>
    {{/if}}
  </div>
</div>
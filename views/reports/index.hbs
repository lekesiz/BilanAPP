<div class="container py-4">
    <h1 class="mb-4">Rapports et Suivi</h1>

    <div class="row g-4">
        {{!-- Yararlanıcı Durumları --}}
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header"><i class="fas fa-users me-2"></i> Statut des Bénéficiaires</div>
                <div class="card-body">
                     <div class="row text-center">
                        <div class="col">
                            <h6 class="text-muted">Actifs</h6>
                            <a href="/beneficiaries?status=active" class="text-decoration-none"><p class="fs-4">{{statusCounts.active}}</p></a>
                        </div>
                        <div class="col">
                             <h6 class="text-muted">En Attente</h6>
                             <a href="/beneficiaries?status=on_hold" class="text-decoration-none"><p class="fs-4">{{statusCounts.on_hold}}</p></a>
                        </div>
                         <div class="col">
                             <h6 class="text-muted">Terminés</h6>
                             <a href="/beneficiaries?status=completed" class="text-decoration-none"><p class="fs-4">{{statusCounts.completed}}</p></a>
                        </div>
                        <div class="col">
                             <h6 class="text-muted">Initiaux</h6>
                             <a href="/beneficiaries?status=initial" class="text-decoration-none"><p class="fs-4">{{statusCounts.initial}}</p></a>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                     <a href="/beneficiaries">Voir tous les bénéficiaires</a>
                </div>
            </div>
        </div>

         {{!-- Bilan Aşamaları --}}
        <div class="col-md-6">
             <div class="card shadow-sm">
                 <div class="card-header"><i class="fas fa-tasks me-2"></i> Répartition par Phase de Bilan</div>
                 <div class="card-body">
                    <div class="row text-center">
                         <div class="col">
                            <h6 class="text-muted">Préliminaire</h6>
                             <a href="/beneficiaries?phase=preliminary" class="text-decoration-none"><p class="fs-4">{{phaseCounts.preliminary}}</p></a>
                        </div>
                        <div class="col">
                             <h6 class="text-muted">Investigation</h6>
                            <a href="/beneficiaries?phase=investigation" class="text-decoration-none"><p class="fs-4">{{phaseCounts.investigation}}</p></a>
                        </div>
                        <div class="col">
                             <h6 class="text-muted">Conclusion</h6>
                             <a href="/beneficiaries?phase=conclusion" class="text-decoration-none"><p class="fs-4">{{phaseCounts.conclusion}}</p></a>
                        </div>
                    </div>
                 </div>
             </div>
        </div>

         {{!-- Önemli Uyarılar/Hatırlatıcılar --}}
         <div class="col-md-6">
             <div class="card shadow-sm">
                 <div class="card-header"><i class="fas fa-bell me-2"></i> Échéances & Alertes</div>
                 <div class="list-group list-group-flush">
                        <a href="/appointments?filter=upcoming_7days" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{#unless upcomingAppointmentsCount}}disabled{{/unless}}">
                            Rendez-vous (7 prochains jours)
                            <span class="badge bg-primary rounded-pill">{{upcomingAppointmentsCount}}</span>
                        </a>
                         <a href="/questionnaires?filter=overdue" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{#unless overdueQuestionnairesCount}}disabled{{/unless}}">
                            Questionnaires en retard
                            <span class="badge bg-danger rounded-pill">{{overdueQuestionnairesCount}}</span>
                        </a>
                        <a href="/beneficiaries?filter=upcoming_followup_30days" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{#unless upcomingFollowUpsCount}}disabled{{/unless}}">
                            Entretiens de suivi (30 prochains jours)
                            <span class="badge bg-info rounded-pill">{{upcomingFollowUpsCount}}</span>
                        </a>
                        <a href="/beneficiaries?consentMissing=true" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{#unless missingConsentsCount}}disabled{{/unless}}">
                            <span class="text-warning"><i class="fas fa-handshake-slash me-1"></i> Consentements Manquants</span>
                            <span class="badge bg-warning text-dark rounded-pill">{{missingConsentsCount}}</span>
                        </a>
                        <a href="/beneficiaries?agreementMissing=true" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center {{#unless missingAgreementsCount}}disabled{{/unless}}">
                            <span class="text-danger"><i class="fas fa-file-signature me-1"></i> Conventions Non Signées</span>
                            <span class="badge bg-danger rounded-pill">{{missingAgreementsCount}}</span>
                        </a>
                 </div> 
             </div>
         </div>

         {{!-- Diğer Raporlar (Boş) --}}
          <div class="col-md-6">
             <div class="card shadow-sm">
                 <div class="card-header"><i class="fas fa-chart-line me-2"></i> Autres Rapports</div>
                 <div class="card-body">
                     <p class="text-muted">D'autres rapports et analyses seront bientôt disponibles.</p>
                 </div>
             </div>
         </div>

    </div>

</div> 

{{!-- Charting Script --}}
{{#addScript}}
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Chart.js için veri
        const phaseData = {
            labels: {{{json chartData.phases.labels}}},
            datasets: [{
                label: 'Bénéficiaires par Phase',
                data: {{{json chartData.phases.data}}},
                backgroundColor: [
                    'rgba(255, 159, 64, 0.7)', // Orange
                    'rgba(54, 162, 235, 0.7)', // Blue
                    'rgba(75, 192, 192, 0.7)', // Green
                ],
                borderColor: [
                    'rgba(255, 159, 64, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(75, 192, 192, 1)',
                ],
                borderWidth: 1
            }]
        };

         const statusData = {
            labels: {{{json chartData.statuses.labels}}},
            datasets: [{
                label: 'Bénéficiaires par Statut',
                data: {{{json chartData.statuses.data}}},
                 backgroundColor: [
                    'rgba(153, 102, 255, 0.7)', // Purple
                    'rgba(255, 205, 86, 0.7)', // Yellow
                    'rgba(201, 203, 207, 0.7)', // Grey
                    'rgba(75, 192, 192, 0.7)' // Green (Active için)
                ],
                borderColor: [
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 205, 86, 1)',
                    'rgba(201, 203, 207, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        };

        // Phase Chart (Pie)
        const phaseCtx = document.getElementById('phaseChart');
        if(phaseCtx) {
             new Chart(phaseCtx, {
                type: 'pie',
                data: phaseData,
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: false,
                            text: 'Répartition par Phase'
                        }
                    }
                }
            });
        }
       
        // Status Chart (Doughnut)
        const statusCtx = document.getElementById('statusChart');
         if(statusCtx) {
             new Chart(statusCtx, {
                type: 'doughnut',
                data: statusData,
                 options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: false,
                            text: 'Répartition par Statut'
                        }
                    }
                }
            });
         }
    });
</script>
{{/addScript}} 
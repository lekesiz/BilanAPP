{{!< layouts/auth}}

<div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
    <p>Créez votre compte pour accéder à la plateforme.</p>
</div>

{{> messages}}

<form action="/auth/register" method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-group mb-3">
        <label for="firstName" class="form-label">Prénom</label>
        <input type="text" id="firstName" name="firstName" class="form-control" placeholder="Prénom" required value="{{firstName}}">
    </div>
    <div class="form-group mb-3">
        <label for="lastName" class="form-label">Nom</label>
        <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Nom" required value="{{lastName}}">
    </div>
    <div class="form-group mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Adresse Email" required value="{{email}}">
    </div>
    <div class="form-group mb-3">
        <label for="password" class="form-label">Mot de passe</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe (min 6 caractères)" required>
    </div>
    <div class="form-group mb-3">
        <label for="password2" class="form-label">Confirmer le mot de passe</label>
        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirmer le mot de passe" required>
    </div>
     <div class="form-group mb-3">
        <label for="userType" class="form-label">Type de compte</label>
        <select id="userType" name="userType" class="form-select" required>
            <option value="" disabled {{#unless userType}}selected{{/unless}}>-- Choisir --</option>
            <option value="consultant" {{#eq userType "consultant"}}selected{{/eq}}>Consultant</option>
            <option value="beneficiary" {{#eq userType "beneficiary"}}selected{{/eq}}>Bénéficiaire</option>
        </select>
        <small class="form-text text-muted">Le type de compte détermine vos accès.</small>
    </div>

    <button class="btn btn-lg btn-primary btn-block w-100" type="submit">S'inscrire</button>
</form>

<div class="mt-4 text-center">
    <p>Vous avez déjà un compte? <a href="/auth/login">Connectez-vous</a></p>
</div> 
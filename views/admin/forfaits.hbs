{{#> layouts/main}}
<div class="container py-4">
    <h1 class="h3 mb-4">{{title}}</h1>

    {{> messages}}

    <div class="card">
        <div class="card-body p-0">
            {{#if forfaits.length}}
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nom du Forfait</th>
                                <th>Description</th>
                                <th>Crédits par Défaut</th>
                                <th>Limite Bénéficiaires</th>
                                <th>Limite Gén. IA / Mois</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each forfaits}}
                                <tr>
                                    <td><strong>{{name}}</strong></td>
                                    <td>{{description}}</td>
                                    <td>{{defaultCredits}}</td>
                                    <td>{{#if maxBeneficiaries}}{{maxBeneficiaries}}{{else}}Illimité{{/if}}</td>
                                    <td>{{#if maxAiGenerationsMonthly}}{{maxAiGenerationsMonthly}}{{else}}Illimité{{/if}}</td>
                                    <td class="text-end">
                                         {{#if (eq name 'Admin')}}
                                            <span class="text-muted small">Non modifiable</span>
                                        {{else}}
                                            <a href="/admin/forfaits/{{name}}/edit" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        {{/if}}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{else}}
                 <div class="text-center p-5">
                    <p class="text-muted">Aucun forfait trouvé.</p>
                     {{!-- TODO: Add Forfait ekleme butonu? --}}
                </div>
            {{/if}}
        </div>
    </div>
</div>
{{/layouts/main}} 
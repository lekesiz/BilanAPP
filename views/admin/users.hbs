{{#> layouts/main}}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Gestion des Utilisateurs</h1>
        <a href="/admin/users/add" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i> Ajouter un Utilisateur
        </a>
    </div>

    <!-- Filtres -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">Filtres</h5>
        </div>
        <div class="card-body">
            <form id="userFiltersForm" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Type d'utilisateur</label>
                    <select class="form-select" name="userType">
                        <option value="">Tous</option>
                        <option value="admin">Admin</option>
                        <option value="consultant">Consultant</option>
                        <option value="beneficiary">Bénéficiaire</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Forfait</label>
                    <select class="form-select" name="forfaitType">
                        <option value="">Tous</option>
                        {{#each forfaitOptions}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Recherche</label>
                    <input type="text" class="form-control" name="search" placeholder="Nom, Email...">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> Rechercher
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des utilisateurs -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">Liste des Utilisateurs</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Type</th>
                        <th>Forfait</th>
                        <th>Crédits</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                        <tr>
                            <td>{{lastName}} {{firstName}}</td>
                            <td>{{email}}</td>
                            <td><span class="badge {{#ifCond userType '===' 'admin'}}bg-danger{{else ifCond userType '===' 'consultant'}}bg-primary{{else}}bg-success{{/ifCond}}">{{userType}}</span></td>
                            <td>{{forfaitType}}</td>
                            <td>{{availableCredits}}</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <!-- Bouton d'ajustement des crédits -->
                                    <button type="button" class="btn btn-sm btn-outline-success" 
                                            data-bs-toggle="modal" data-bs-target="#adjustCreditsModal-{{id}}"
                                            title="Ajuster les crédits">
                                        <i class="fas fa-coins"></i>
                                    </button>
                                    
                                    <!-- Bouton de modification de forfait -->
                                    <button type="button" class="btn btn-sm btn-outline-primary" 
                                            data-bs-toggle="modal" data-bs-target="#changeForfaitModal-{{id}}"
                                            title="Changer le forfait">
                                        <i class="fas fa-tag"></i>
                                    </button>
                                    
                                    <!-- Bouton de modification -->
                                    <a href="/admin/users/{{id}}/edit" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    <!-- Bouton de suppression (désactivé pour l'admin actuel) -->
                                    {{#ifCond id '!==' ../user.id}}
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-{{id}}"
                                                title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    {{else}}
                                        <button type="button" class="btn btn-sm btn-outline-danger" disabled title="Vous ne pouvez pas supprimer votre propre compte">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    {{/ifCond}}
                                </div>
                                
                                <!-- Modal de suppression -->
                                <div class="modal fade" id="deleteModal-{{id}}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Êtes-vous sûr de vouloir supprimer l'utilisateur <strong>{{firstName}} {{lastName}}</strong> ?</p>
                                                <p class="text-danger"><strong>Attention:</strong> Cette action est irréversible et supprimera également toutes les données associées.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form action="/admin/users/{{id}}/delete" method="POST">
                                                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Modal d'ajustement des crédits -->
                                <div class="modal fade" id="adjustCreditsModal-{{id}}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Ajuster les crédits</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <form action="/admin/users/{{id}}/adjust-credits" method="POST">
                                                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                                <div class="modal-body">
                                                    <p>Utilisateur: <strong>{{firstName}} {{lastName}}</strong></p>
                                                    <p>Crédits actuels: <strong>{{availableCredits}}</strong></p>
                                                    
                                                    <div class="mb-3">
                                                        <label for="creditAmount-{{id}}" class="form-label">Montant à ajuster:</label>
                                                        <div class="input-group">
                                                            <span class="input-group-text">±</span>
                                                            <input type="number" class="form-control" id="creditAmount-{{id}}" name="amount" required placeholder="Ex: 50 pour ajouter, -20 pour déduire">
                                                        </div>
                                                        <div class="form-text">Utilisez un nombre positif pour ajouter des crédits ou un nombre négatif pour en retirer.</div>
                                                    </div>
                                                    
                                                    <div class="mb-3">
                                                        <label for="creditReason-{{id}}" class="form-label">Raison:</label>
                                                        <input type="text" class="form-control" id="creditReason-{{id}}" name="reason" required placeholder="Ex: Bonus pour fidélité">
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-success">Confirmer l'ajustement</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Modal de changement de forfait -->
                                <div class="modal fade" id="changeForfaitModal-{{id}}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Changer le forfait</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <form action="/admin/users/{{id}}/update-forfait" method="POST">
                                                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                                                <div class="modal-body">
                                                    <p>Utilisateur: <strong>{{firstName}} {{lastName}}</strong></p>
                                                    <p>Forfait actuel: <strong>{{forfaitType}}</strong></p>
                                                    
                                                    <div class="mb-3">
                                                        <label for="newForfait-{{id}}" class="form-label">Nouveau forfait:</label>
                                                        <select class="form-select" id="newForfait-{{id}}" name="forfaitType" required>
                                                            <option value="">Aucun forfait</option>
                                                            {{#each ../forfaitOptions}}
                                                                <option value="{{this}}" {{#ifCond this '===' ../forfaitType}}selected{{/ifCond}}>{{this}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                    
                                                    <div class="alert alert-warning">
                                                        <strong>Note:</strong> Le changement de forfait réinitialisera les crédits de l'utilisateur selon les valeurs par défaut du nouveau forfait.
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-primary">Confirmer le changement</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{else}}
                        <tr>
                            <td colspan="6" class="text-center py-3">Aucun utilisateur trouvé.</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/layouts/main}} 
{{!-- Dashboard Başlığı --}}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Tableau de bord</h1>
        <div>
            <a href="/beneficiaries/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau Bénéficiaire
            </a>
        </div>
    </div>

    {{!-- İstatistik Kartları - Ana Sayılar --}}
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                    <div class="mb-2">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                    <h5 class="card-title">Bénéficiaires Actifs</h5>
                    <p class="card-text display-6">{{stats.beneficiaryCount}}</p>
                     <a href="/beneficiaries" class="stretched-link"></a>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                     <div class="mb-2">
                        <i class="fas fa-calendar-check fa-2x text-success"></i>
                    </div>
                    <h5 class="card-title">Rendez-vous à Venir</h5>
                    <p class="card-text display-6">{{stats.upcomingAppointments}}</p>
                    <a href="/appointments" class="stretched-link"></a>
                </div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body">
                     <div class="mb-2">
                         <i class="fas fa-envelope fa-2x text-danger"></i>
                    </div>
                    <h5 class="card-title">Messages Non Lus</h5>
                    <p class="card-text display-6">{{stats.unreadMessages}}</p>
                     <a href="/messages" class="stretched-link"></a>
                </div>
            </div>
        </div>
    </div>

    {{!-- İstatistik Kartları - Bilan Aşamaları --}}
     <div class="card mb-4 shadow-sm">
         <div class="card-header">
             <h5 class="card-title mb-0">Statut des Bilans par Phase</h5>
         </div>
        <div class="card-body">
            <div class="row text-center">
                 <div class="col">
                     <h6 class="text-muted">Phase Préliminaire</h6>
                     <p class="fs-4">{{stats.preliminaryCount}}</p>
                 </div>
                 <div class="col">
                     <h6 class="text-muted">Phase d'Investigation</h6>
                     <p class="fs-4">{{stats.investigationCount}}</p>
                 </div>
                 <div class="col">
                     <h6 class="text-muted">Phase de Conclusion</h6>
                     <p class="fs-4">{{stats.conclusionCount}}</p>
                 </div>
            </div>
        </div>
     </div>

    {{!-- Uyarılar / Gerekli Aksiyonlar Kartı --}}
    {{#or missingConsents.length missingAgreements.length overdueQuestionnaires.length}}
        <div class="card mb-4 shadow-sm border-danger">
             <div class="card-header bg-danger text-white">
                 <h5 class="card-title mb-0"><i class="fas fa-triangle-exclamation me-2"></i> Alertes / Actions Requises</h5>
             </div>
             <div class="card-body p-0">
                 <ul class="list-group list-group-flush">
                     {{#if missingConsents.length}}
                        <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-center">
                            <a href="/beneficiaries?consentMissing=true" class="text-dark text-decoration-none"><strong><i class="fas fa-handshake-slash me-1"></i> Consentements Manquants</strong></a>
                             <span class="badge bg-warning text-dark rounded-pill">{{missingConsents.length}}</span>
                        </li>
                     {{/if}}
                      {{#if missingAgreements.length}}
                         <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-center">
                             <a href="/beneficiaries?agreementMissing=true" class="text-dark text-decoration-none"><strong><i class="fas fa-file-signature me-1 text-danger"></i> Conventions Non Signées</strong></a>
                            <span class="badge bg-warning text-dark rounded-pill">{{missingAgreements.length}}</span>
                         </li>
                     {{/if}}
                     {{#if overdueQuestionnaires.length}}
                          <li class="list-group-item list-group-item-danger d-flex justify-content-between align-items-center">
                            <a href="/questionnaires?filter=overdue" class="text-danger text-decoration-none"><strong><i class="fas fa-calendar-times me-1"></i> Questionnaires en Retard</strong></a>
                             <span class="badge bg-danger rounded-pill">{{overdueQuestionnaires.length}}</span>
                         </li>
                     {{/if}}
                 </ul>
             </div>
        </div>
    {{/or}}

    {{!-- Takip Görüşmesi Hatırlatıcı Kartı --}}
    {{#if followUpBeneficiaries.length}}
        <div class="card mb-4 shadow-sm border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0"><i class="fas fa-stopwatch me-2"></i> Entretiens de Suivi à 6 Mois (Prochains / En Retard)</h5>
            </div>
            <div class="list-group list-group-flush">
                {{#each followUpBeneficiaries}}
                    <a href="/beneficiaries/{{id}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fas fa-user me-2"></i> {{user.firstName}} {{user.lastName}}
                        </span>
                        <span class="badge {{dateStatusClass followUpDate}} ms-2">
                            {{formatDate followUpDate}}
                        </span>
                    </a>
                {{/each}}
            </div>
        </div>
    {{/if}}

    <div class="row g-4">
        {{!-- Yaklaşan Randevular --}}
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Prochains Rendez-vous</h5>
                    <a href="/appointments" class="btn btn-sm btn-outline-primary">Voir tout</a>
                </div>
                <div class="card-body">
                    {{#if upcomingAppointments.length}}
                        <div class="list-group list-group-flush">
                            {{#each upcomingAppointments}}
                                <a href="/beneficiaries/{{beneficiary.id}}" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{beneficiary.user.firstName}} {{beneficiary.user.lastName}}</h6>
                                        <small>{{formatDateTime date}}</small>
                                    </div>
                                    <p class="mb-1"><small>{{type}}</small></p>
                                </a>
                            {{/each}}
                        </div>
                    {{else}}
                        <p class="text-muted text-center my-4">Aucun rendez-vous à venir</p>
                    {{/if}}
                </div>
            </div>
        </div>

        {{!-- Son Aktiviteler --}}
        <div class="col-md-6">
            <div class="card h-100 shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">Activités Récentes</h5>
                </div>
                <div class="card-body">
                    {{#if recentActivities.length}}
                        <div class="timeline">
                            {{#each recentActivities}}
                                <div class="timeline-item">
                                    <div class="timeline-marker"></div>
                                    <div class="timeline-content">
                                        <h6 class="mb-1">{{title}}</h6>
                                        <p class="mb-0">{{description}}</p>
                                        <small class="text-muted">{{formatDateTime date}}</small>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{else}}
                        <p class="text-muted text-center my-4">Aucune activité récente</p>
                    {{/if}}
                </div>
            </div>
             {{!-- Son Tamamlanan Anketler Kartı --}}
             {{#if recentlyCompletedQuestionnaires.length}}
                <div class="card h-100 shadow-sm mt-4"> {{!-- mt-4 ile üstteki karttan boşluk bırak --}}
                     <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0"><i class="fas fa-check-double me-2"></i> Questionnaires Récemment Complétés</h5>
                        <a href="/questionnaires?status=completed" class="btn btn-sm btn-outline-primary">Voir tout</a> {{!-- TODO: Status filtresi eklenmeli --}}
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                             {{#each recentlyCompletedQuestionnaires}}
                                <a href="/questionnaires/{{id}}/results" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{title}}</h6>
                                        <small>{{formatDateTime updatedAt}}</small>
                                    </div>
                                    <p class="mb-0"><small>Par: {{beneficiary.user.firstName}} {{beneficiary.user.lastName}}</small></p>
                                </a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>

{{!-- Dashboard için CSS --}}
<style>
.timeline {
    position: relative;
    padding: 1rem 0;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 0.75rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e9ecef;
}

.timeline-item {
    position: relative;
    padding-left: 2.5rem;
    padding-bottom: 1.5rem;
}

.timeline-marker {
    position: absolute;
    left: 0;
    top: 0.25rem;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: #primary;
    border: 2px solid #fff;
}

.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    border: none;
    transition: transform 0.2s;
}

.card:hover {
    transform: translateY(-2px);
}
</style>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Nouveau message</h1>
    <a href="/messages" class="btn btn-outline-secondary">
      <i class="fas fa-arrow-left"></i> Retour aux messages
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <form action="/messages/send" method="POST">
        <div class="mb-3">
          <label for="beneficiaryId" class="form-label">Destinataire <span class="text-danger">*</span></label>
          <select class="form-select" id="beneficiaryId" name="beneficiaryId" required>
            <option value="">Sélectionner un bénéficiaire</option>
            {{#each beneficiaries}}
              <option value="{{this.id}}" {{#if (eq ../selectedBeneficiaryId this.id)}}selected{{/if}}>
                {{this.firstName}} {{this.lastName}}
              </option>
            {{/each}}
          </select>
        </div>

        <div class="mb-3">
          <label for="content" class="form-label">Message <span class="text-danger">*</span></label>
          <textarea class="form-control" id="content" name="content" rows="5" placeholder="Écrivez votre message..." required></textarea>
        </div>

        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" id="sendNotification" name="sendNotification" checked>
          <label class="form-check-label" for="sendNotification">
            Envoyer une notification par email au bénéficiaire
          </label>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <button type="reset" class="btn btn-outline-secondary">Réinitialiser</button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Envoyer le message
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

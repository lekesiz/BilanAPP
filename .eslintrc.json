{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn",
    "prettier/prettier": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "logs/",
    "tmp/",
    "coverage/",
    "public/vendor/",
    "*.min.js",
    "*.min.css",
    "*.sqlite",
    "*.sqlite-journal",
    "uploads/",
    "package-lock.json",
    ".DS_Store"
  ]
} 